# MythForge environment variables.
# Copy to .env and edit before deploying:  cp .env.example .env

# Public IP of the VPS (shown in render response URLs)
VPS_IP=51.83.154.112

# API key for /api/* endpoints. Leave empty to disable auth (open API).
# Example: API_KEY=mysecretkey123
API_KEY=

# Flask environment: production | development
FLASK_ENV=production

# Maximum MP3 upload size in megabytes
MAX_UPLOAD_MB=500

# Maximum FFmpeg render time in seconds before timeout
FFMPEG_TIMEOUT=600

# Auto-delete job dirs older than this many hours (disk cleanup)
JOB_TTL_HOURS=48

# Optional: log file path inside container (empty = stdout only)
# LOG_FILE=/app/logs/api.log
LOG_FILE=
